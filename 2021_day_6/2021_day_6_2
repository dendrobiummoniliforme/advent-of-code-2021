import { data } from "../lib";

// Comma delimited file.
let lanternfish: string[] = data(`${__dirname}/input.txt`).split(',');
console.log("lanternfish", lanternfish);

interface cohort {
    bio0: number;
    bio1: number;
    bio2: number;
    bio3: number;
    bio4: number;
    bio5: number;
    bio6: number;
    bio7: number;
    bio8: number;
}

const group = (elements: string[], comparator: number): number => { 
    return elements.filter(element => Number(element) === 1).length;
}

const initialState: cohort = {
    bio0: group(lanternfish, 0),
    bio1: group(lanternfish, 1),
    bio2: group(lanternfish, 2),
    bio3: group(lanternfish, 3),
    bio4: group(lanternfish, 4),
    bio5: group(lanternfish, 5),
    bio6: group(lanternfish, 6),
    bio7: group(lanternfish, 7),
    bio8: group(lanternfish, 1)
}

console.log(initialState);